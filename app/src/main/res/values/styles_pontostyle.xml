<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Pontostyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">

        <!--<item name="android:titleTextStyle">@style/MyActionBarTitleText</item>-->
        <item name="android:actionBarItemBackground">@drawable/selectable_background_pontostyle</item>
        <!--<item name="android:popupMenuStyle">@style/PopupMenu.Pontostyle</item>-->
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Pontostyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Pontostyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Pontostyle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Pontostyle</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBar.Solid.Pontostyle</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="android:actionModeBackground">@android:color/holo_red_dark</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_pontostyle</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Pontostyle</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Pontostyle.Widget</item>

    </style>

    <style name="MyActionBar.TitleTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#F0F</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dip</item>
    </style>

<!--    <style name="MyActionBarTitleText"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textSize">22sp</item>
    </style>-->


    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <style name="ActionBar.Solid.Pontostyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_pontostyle</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_pontostyle</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_pontostyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Pontostyle</item>
    </style>

    <style name="ActionBar.Transparent.Pontostyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_pontostyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Pontostyle</item>
    </style>

    <style name="PopupMenu.Pontostyle" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_pontostyle</item>
    </style>

    <style name="DropDownListView.Pontostyle" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_pontostyle</item>
    </style>

    <style name="ActionBarTabStyle.Pontostyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_pontostyle</item>
    </style>

    <style name="DropDownNav.Pontostyle" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_pontostyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_pontostyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_pontostyle</item>
    </style>
    
    <style name="ProgressBar.Pontostyle" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_pontostyle</item>
    </style>
    
    <style name="ActionButton.CloseMode.Pontostyle" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_pontostyle</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Pontostyle.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Pontostyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Pontostyle</item>
    </style>

</resources>